{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "@shared": ["app/shared/index"],
      "@shared/*": ["app/shared/*"],
      "@core": ["app/core/index"],
      "@core/*": ["app/core/*"],
      "@env/*": ["environments/*"]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
